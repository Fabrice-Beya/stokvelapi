<% include ./partials/header %>
<section>
<div class="main" >
    <h1 style="margin:25px;">Stokvel Groceries Ledger</h1>
    <div class="row">
        <div class="col-12 col-md-6" style="display: flex; flex-direction: column; margin: auto; align-items: center; text-align: center;">
            <!-- <img style="Width:800px;Height:400px; margin-bottom: 10px;"
            src="https://images.unsplash.com/photo-1534723452862-4c874018d66d?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=525e1fc546acf366f76f225fea4f8f24&auto=format&fit=crop&w=1350&q=80"/> -->
            <h6>Recent Transactions</h6>
            <% transactions.forEach(transaction =>{%>
            <table  style="text-align:left; padding: 0;border-style: solid; Width:800px" class="table table-striped">
                <tbody>
                 
                    <tr>
                        <th scope="row">Sender</th>
                        <td><%=transaction.fromWallet.name%></td>
                    </tr>
                    <tr>
                        <th scope="row">Public Address</th>
                        <td><%=transaction.fromWallet.address%></td>
                    </tr>
                    <tr>
                        <th scope="row">Receiver</th>
                        <td><%=transaction.toWallet.name%></td>
                    </tr>
                    <tr>
                        <th scope="row">Public Address</th>
                        <td><%=transaction.toWallet.address%></td>
                    </tr>
                    <tr>
                        <th scope="row">Value</th>
                        <td><%=transaction.value%> STK</td>
                    </tr>
                    <tr>
                        <th scope="row">Date</th>
                        <td><%=transaction.date%></td>
                    </tr>
                    <tr>
                        <th scope="row">Transaction Status</th>
                        <td><%=transaction.status%></td>
                    </tr>
                   
                   
                  
                </tbody>
            </table>
            <%})%>
        </div>
    </div>
      
</div>
</section>
<% include ./partials/footer %>